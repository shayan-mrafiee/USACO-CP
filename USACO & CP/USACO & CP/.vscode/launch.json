{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run and debug active C++ file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/run",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "Compile C++ file",
      "MIMode": "lldb",
      "MIDebuggerPath": "/usr/bin/lldb",
      "setupCommands": [
        {
          "description": "Redirect stdin from file",
          "text": "settings set target.input-path ${workspaceFolder}/input.txt"
        },
        {
          "description": "Redirect stdout to file",
          "text": "settings set target.output-path ${workspaceFolder}/output.txt"
        }
      ]
    }
  ]
}